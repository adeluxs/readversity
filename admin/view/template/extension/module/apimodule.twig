{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            {% if version and ext %}
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> Обновите модуль
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            {% if ext %}
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i>
                    {{ ext }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            <div class="pull-right">
                {% if version %}
                    <a href="{{ update }}" data-toggle="tooltip" title="{{ button_update }}"
                       class="btn btn-success"><i class="fa fa-refresh"></i></a>
                {% endif %}
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if error %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-slideshow" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">Version</label>
                        <div class="col-sm-10 control-label">
                            <div class="pull-left">{{ current_version }}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">{{ entry_store }}</label>
                        <div class="col-sm-10">
                            <div class="well well-sm" style="height: 150px; overflow: auto;">
                                <div class="checkbox">
                                    <label>
                                        {% if 0 in module_apimodule_store|keys %}
                                            <input type="checkbox" name="module_apimodule_store[]" value="0" checked="checked" />
                                            {{ text_default }}
                                        {% else %}
                                            <input type="checkbox" name="module_apimodule_store[]" value="1" />
                                            {{ text_default }}
                                        {% endif %}
                                    </label>
                                </div>
                                {% for store in stores %}
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="module_apimodule_store[]" value="{{ store.store_id }}" />
                                            {{ store.name }}
                                        </label>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="module_apimodule_status" id="input-status" class="form-control">
                                {% if module_apimodule_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                </form>
                <input type="hidden" class="delete_action" value="{{ delete_action }}">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-table"></i> {{ text_connected_devices }}</h3>
                </div>
                <table class="apimodule table table-bordered table-hover">
                    <thead>
                    <tr>
                        <td>{{ text_username }}</td>
                        <td>{{ text_name }}</td>
                        <td>{{ text_oc }}</td>
                        <td class="td_date">{{ text_created_at }}</td>
                        <td class="td_date">{{ text_last_login }}</td>
                        <td>{{ text_delete }}</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for device in devices %}
                        <tr>
                            <td>{{ device.username }}</td>
                            <td>{{ device.device_name }}</td>
                            <td>{{ device.os_type }}</td>
                            <td>{{ device.created_at }}</td>
                            <td>{{ device.last_login }}</td>
                            <td>
                                <button type="button" class="btn btn-danger delete" data-device_token="{{ device.device_token }}">
                                    <i class="fa fa-trash-o"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="alert alert-success d_none deleted" role="alert">
                    {{ text_deleted }}
                </div>
                <div class="alert alert-danger d_none not_deleted" role="alert">
                    {{ text_not_deleted }}
                </div>
            </div>
        </div>
    </div>
</div>
{{ footer }}
